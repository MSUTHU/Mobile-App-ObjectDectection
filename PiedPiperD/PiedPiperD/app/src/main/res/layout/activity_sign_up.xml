<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blackk"
    tools:context=".SignUpActivity">


  <TextView
      android:id="@+id/textView4"
      android:layout_width="192dp"
      android:layout_height="50dp"
      android:layout_marginLeft="130dp"
      android:layout_marginTop="40dp"
      android:text="Sign In"
      android:textColor="#0F5213"
      android:textSize="30dp"
      android:textStyle="italic" />

  <EditText
      android:id="@+id/name_id"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="100dp"
      android:layout_marginTop="240dp"
      android:background="@drawable/round_corner"
      android:ems="10"
      android:hint="Enter Name..."
      android:inputType="textPersonName"
      android:textColorHint="@color/white" />

  <EditText
      android:id="@+id/surname_id"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="100dp"
      android:layout_marginTop="280dp"
      android:background="@drawable/round_corner"
      android:ems="10"
      android:hint="Enter Surname..."
      android:inputType="textPersonName"
      android:textColorHint="@color/white" />


  <Button
      android:id="@+id/sign_btn"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/sign_layout_id"
      android:layout_marginLeft="100dp"
      android:background="@drawable/round_button_corner"
      android:text="Sign In" />

    <LinearLayout
        android:id="@+id/sign_layout_id"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="312dp"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/textView5"
          android:layout_width="40dp"
          android:layout_height="31dp"
          android:layout_marginLeft="64dp"
          android:layout_marginTop="10dp"
          android:text="+27"
          android:textColor="@android:color/white"
          android:textSize="20dp"
          android:background="@drawable/round_corner"
          android:textStyle="bold" />

      <EditText
          android:id="@+id/phone_number_id"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
          android:ems="10"
          android:hint="Enter your number..."
          android:background="@drawable/round_corner"
          android:textColorHint="@color/white"
          android:inputType="number" />
    </LinearLayout>

</RelativeLayout>